<div class="jumbotron">
<h1>EAT-DA-BURGER!</h1>
<img src="/assets/img/burger.jpg" class="center-block img-circle" width="350px">

<div class = "row">
  <div class="panel-group">
  <div class = "col-lg-4 ">
    
      <div class="panel panel-default">
    <div class="panel-heading">
    <h3>Burgers ready to eat:</h3>
    </div>
<div class="panel-body">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR IT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
</div>

  <div class = "col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Add a Burger:</h3></div>
          <div class="panel-body">
            <form class="create-update-form" action="/" method="POST">
              <input type="hidden" name="devoured" value="0">
              <div class="form-group">
                <label for="burg">Burger Name:</label>
                  <input type="text" id="burg" name="burger_name">
              </div>

                  <button type="submit">Add Burger</button>
            </form>
          </div>
    </div>
  </div>

<div class = "col-lg-4">
  <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Consumed Burgers:</h3>
      </div>
      <div class="panel-body">

        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.burger_name}}                
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
  </div>
</div>
</div>
</div>